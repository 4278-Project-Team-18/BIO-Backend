{
  "name": "bio-backend",
  "version": "1.0.0",
  "description": "Backend for the BIO application",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node --esm src/index.ts",
    "dev": "nodemon src/index.ts",
    "prepare": "husky install",
    "test": "nyc mocha -r dotenv/config --timeout 20000 --exit -r ts-node/register src/tests/*.tests.ts",
    "typescript:check": "tsc --esModuleInterop",
    "lint:check": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prettier:format": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "prettier:check": "prettier --check '**/*.{js,jsx,ts,tsx,json,css,scss,md}'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "http": "^0.0.1-security",
    "mongoose": "^7.5.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.6",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.6.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "chai": "^4.3.8",
    "chai-http": "^4.4.0",
    "eslint": "^8.49.0",
    "eslint-plugin-autofix": "^1.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  }
}
